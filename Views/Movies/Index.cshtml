@model IEnumerable<ShowtimeWebApplication.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

<!-- Search Box -->
<div style="margin-bottom: 20px;">
    <form asp-action="Index" method="get">
        <div style="display: flex; align-items: center; gap: 10px;">
            <label>Search by Title: </label>
            <input type="text" name="searchString" value="@ViewData["SearchString"]" placeholder="Enter movie title..." />
            <button type="submit" class="btn btn-primary">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Clear Search</a>
        </div>
    </form>
</div>

<!-- Filter and Sort -->
<div style="margin-bottom: 20px;">
    <form asp-action="Index" method="get">
        <input type="hidden" name="searchString" value="@ViewData["SearchString"]" />
        <label>Genre: </label>
        <select name="genreFilter" asp-items="ViewBag.Genres">
            <option value="">All</option>
        </select>
        <button type="submit">Filter</button>
        <a asp-action="Index" asp-route-searchString="@ViewData["SearchString"]">Clear Filter</a>
    </form>

    <div style="margin-top: 10px;">
        <a asp-action="Index"
           asp-route-sortOrder="title"
           asp-route-searchString="@ViewData["SearchString"]"
           asp-route-genreFilter="@ViewData["CurrentFilter"]">A-Z</a> |
        <a asp-action="Index"
           asp-route-sortOrder="title_desc"
           asp-route-searchString="@ViewData["SearchString"]"
           asp-route-genreFilter="@ViewData["CurrentFilter"]">Z-A</a> |
        <a asp-action="Index"
           asp-route-sortOrder="genre"
           asp-route-searchString="@ViewData["SearchString"]"
           asp-route-genreFilter="@ViewData["CurrentFilter"]">Genre A-Z</a> |
        <a asp-action="Index"
           asp-route-sortOrder="genre_desc"
           asp-route-searchString="@ViewData["SearchString"]"
           asp-route-genreFilter="@ViewData["CurrentFilter"]">Genre Z-A</a>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No movies found matching your search criteria.
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Showtimes)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Showtimes)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <text>|</text>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <text>|</text>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                        else if (User.Identity.IsAuthenticated)
                        {
                            <text>|</text>
                            <a asp-controller="Bookings" asp-action="Create" asp-route-movieId="@item.Id">Book</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}